<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#dfdfdf">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:cardElevation="6dp"
        android:gravity="center"
        android:id="@+id/card"
        android:layout_below="@+id/profileimageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        app:cardCornerRadius="5dp">

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/scrollView">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout"
            android:padding="15dp"
            android:layout_gravity="left">

        <ImageView
            android:id="@+id/n"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:tint="#000000"
            android:src="@drawable/profile"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_above="@+id/email" />

        <TextView
            android:id="@+id/name"
            android:text="name"
            android:layout_marginLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textColor="#000000"
            android:textSize="20dp"
            android:layout_gravity="center_vertical"
            android:layout_toEndOf="@+id/n" />


            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/email"
                android:layout_toLeftOf="@+id/email"
                android:id="@+id/e"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/n"
                android:layout_alignBottom="@+id/email" />


        <TextView
            android:id="@+id/email"
            android:layout_below="@+id/name"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:text="emai"
            android:gravity="center_vertical"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="20dp"
            android:layout_gravity="center_vertical"
            android:layout_alignStart="@+id/name" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/phone"
                android:layout_toLeftOf="@+id/phone"
                android:layout_below="@+id/e"
                android:layout_alignParentLeft="true"
                android:layout_alignBottom="@+id/phone" />


            <TextView
                android:id="@+id/phone"
                android:layout_below="@+id/email"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:text="+91- 94 XXX XXX XX"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="20dp"
                android:layout_gravity="center_vertical"
                android:layout_alignStart="@+id/email" />

        </RelativeLayout>

        </ScrollView>

    </android.support.v7.widget.CardView>



<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="@drawable/backgraound2"
    android:orientation="vertical"
    android:gravity="bottom|center">

</LinearLayout>


    <ImageView
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:padding="5dp"
        android:id="@+id/profileimageView"
        android:background="@drawable/oval2"
        android:layout_marginTop="135dp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:id="@+id/firstlater"
        android:text="A"
        android:gravity="center"
        android:background="@drawable/oval"
        android:textColor="#ffffff"
        android:textSize="70sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="135dp" />

    <Button
        android:id="@+id/btnLogout"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_button"
        android:text="Log Out"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:layout_marginTop="80dp"
        android:layout_below="@+id/card"
        android:layout_centerHorizontal="true" />

</RelativeLayout>